@model e_commerceMVC.ViewModels.HomeViewModel
@using e_commerceMVC.Infrastructure
@{

    ViewBag.Title = "Witaj w sklepie";

}

<nav class="genres-horizontal">
    <ul>
        @foreach (var kategory in Model.Kategories)
        {
            <li>
                <a href="@Url.Action("List", "Store", new { kategoryname = kategory.Name.ToLower() })"
                   style="background-image: url(@Url.KategoryIconPath(kategory.IconFileName)); ">
                    @kategory.Name

                </a>
            </li>
        }
    </ul>
</nav>

<section>
    <ul class="ThreeColumnsCoversList large-cover-list">
        @foreach (var newArrival in Model.NewArrivals)
        {
            <li>
                <article>
                    <a class="addtocartlink" href="@Url.Action("AddToCart", "Cart", new { id = newArrival.ProductId })">
                        <img src="../Content/Images/cart.png" />
                    </a>
                    <a class="productdetailslink" href="@Url.Action("Details", "Store", new { id = newArrival.ProductId })">
                        <div class="newFlag"></div>
                        <img class="album-cover" src="@Url.ProductPhotoPath(newArrival.ProductFileName)" />
                        <h1>
                            @newArrival.ProductName
                        </h1>
                    </a>
                </article>
            </li>
        }
    </ul>
</section>
<section>
    <ul class="ThreeColumnsCoversList large-cover-list">
        @foreach (var bestseller in Model.Bestsellers)
        {
            <li>
                <article>
                    <a class="addtocartlink" href="@Url.Action("AddToCart", "Cart", new { id = bestseller.ProductId })">
                        <img src="../Content/Images/cart.png" />
                    </a>
                    <a class="productdetailslink" href="@Url.Action("Details", "Store", new { id = bestseller.ProductId })">
                        <div class="bestsellerFlag"></div>
                        <img class="album-cover" src="@Url.ProductPhotoPath(bestseller.ProductFileName)" />
                        <h1>
                            @bestseller.ProductName
                        </h1>
                    </a>
                </article>
            </li>
        }
    </ul>
</section>
