@model e_commerceMVC.ViewModels.HomeViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Strona Mobilna</title>

    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>


</head>
<body>
    @Html.Partial("_ViewSwitcher")
    <h3 class="ui-bar ui-bar-a">Witamy w sklepie komputerowym</h3>
    <div class="ui-body">
        <ul data-role="listview" data-inset="true">

            <li data-role="list-divider">Nowości</li>

            @foreach (var newArrival in Model.NewArrivals)
            {

                <li>
                    <a href="@Url.Action("Details", "Store", new { id=newArrival.ProductId })" data-ajax="false">
                        <img src="@Url.Content("~/Content/Photos/" + newArrival.ProductFileName)">
                        <h2>@newArrival.ProductName</h2>
                        @*<p></p>*@
                    </a>
                </li>
            }


            <li data-role="list-divider">Bestselery</li>
            @foreach (var bestseller in Model.Bestsellers)
            {

                <li>
                    <a href="@Url.Action("Details", "Store", new { id=bestseller.ProductId })" data-ajax="false">
                        <img src="@Url.Content("~/Content/Photos/" + bestseller.ProductFileName)">
                        <h2>@bestseller.ProductName</h2>
                        @*<p></p>*@
                    </a>
                </li>
            }
        </ul>
        <br/>

        <ul data-role="listview" data-inset="true" data-filter-placeholder="Szukaj kategorii produktu" data-filter="true">
            @foreach (var kategory in Model.Kategories) 
            { 
                <li>
                    <a href="@Url.Action("List", "Store", new { kategoryname = kategory.Name.ToLower() })" data-ajax="false">@kategory.Name</a>
                </li>
            }

        </ul>

        <br/>
        <div data-role="footer">
            <div data-role="navbar">
                <ul>
                    <li><a href="https://www.facebook.com" data-ajax="false" data-icon="user">Facebook</a></li>
                    <li><a href="@Url.Action("StaticContent", "Home", new { viewname = "Onas" })" data-ajax="false" data-icon="home">O nas</a></li>
                    <li><a href="@Url.Action("StaticContent", "Home", new { viewname = "Kontakt" })" data-ajax="false" data-icon="phone">O nas</a></li>
                </ul>
            </div>
        </div>

    </div>
</body>
</html>
