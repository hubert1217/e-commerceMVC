@model e_commerceMVC.Models.Product
@using e_commerceMVC.Infrastructure
    @{
        ViewBag.Title = "Details";
        Layout = "~/Views/Shared/_StoreLayout.cshtml";
    }

<div id="productlist-content">
    @Html.Action("KategoriesMenu")

    <div id="productlist-rightsection">
        <div id="breadcrumb-section"></div>
            <img src="../Content/Images/home-small.png"/>
            <a href="nav">
                Start > Kategoria
            </a>
    </div>

    <section id="product-details-section">
        <div id="product-details-left">
            <img src="@Url.ProductPhotoPath(Model.ProductFileName)"/>

            <div id="product-details-share">
                <a href="fbshare"></a>
                <div></div>
                <a href="twshare"></a>
            </div>
        </div>
        <div id="product-details-right">
            <div id="product-details-names">
                <h1>
                    @Model.ProductName
                </h1>
            </div>
            <div id="product-details-price">
                <div>
                    @String.Format("{0:0.##}", Model.Price)<span>PLN</span>
                </div>
                <a href="@Url.Action("AddToCart", "Cart", new { id= Model.ProductId })"></a>
            </div>
            <div id="product-details-description">
                @Model.Description
            </div>
            <div id="product-details-info">
                Bezpłatna przesyłka. Czas realizacji: 24 godziny.
            </div>
        </div>
    </section>

</div>